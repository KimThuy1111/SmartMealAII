<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_calo_logo"
            android:layout_marginBottom="8dp"
            android:contentDescription="App Logo" />

        <!-- App name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALO"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell Us About Yourself"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1/3"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="20dp" />

        <!-- Gender Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/genderGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/genderMale"
                android:text="Male"
                android:layout_marginEnd="16dp"
                app:buttonTint="#68E3B5"
                android:textColor="#444444"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <RadioButton
                android:id="@+id/genderFemale"
                android:text="Female"
                android:layout_marginEnd="16dp"
                app:buttonTint="#68E3B5"
                android:textColor="#444444"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </RadioGroup>


        <!-- Age -->
        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/bg_input"
            android:paddingStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="#888888" />

        <!-- Weight -->
        <EditText
            android:id="@+id/weightInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Current Weight (kg)"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input"
            android:paddingStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="#888888" />

        <!-- Height -->
        <EditText
            android:id="@+id/heightInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Goal Height (cm)"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input"
            android:paddingStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="#888888" />

        <!-- Activity Level -->
        <Spinner
            android:id="@+id/activitySpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown" />

        <!-- Goal -->
        <Spinner
            android:id="@+id/goalSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This helps us calculate your daily calorie needs."
            android:textSize="14sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_short_2"
            android:background="@drawable/bg_button_gradient"
            app:backgroundTint="@null"
            app:cornerRadius="25dp"
            android:textSize="22sp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
